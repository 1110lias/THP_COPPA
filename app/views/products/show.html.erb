<main class="max-w-6xl my-8 mb-32 p-8 pt-24 pb-10 gap-6 bg-white rounded-lg shadow-lg flex flex-col md:flex-row">
    <!-- Product Image -->
    <section class="mx-auto mt-14 h-96 md:w-1/2 flex justify-center md:justify-center">
        <%= image_tag @product.photo || "products/guanciale_01.png", class: "rounded-lg shadow-lg", alt: @product.title %>
    </section>
    <!-- Product Details -->
    <section class="w-full md:w-1/2 md:ml-6 mt-6 md:mt-0">
        <h2 class="text-4xl md:text-3xl text-slate-900 font-bold mb-4"><%= @product.title %></h2>
        <h2 class="text-2xl md:text-2xl text-slate-900 mb-4">500g</h2>
        <p class="text-lg md:text-xl text-gray-700 mb-4"><%= @product.description %></p>
        <h2 class="text-2xl md:text-3xl text-amber-800 mb-4"><%= @product.price %>€</h2>
        
        <div class="mb-8 p-1 ">
            <h2 class="block mb-4">Quantité:</h2>
            <div class="flex items-center gap-3">
                <%= link_to "#", class: "btn btn-primary-icon" do %>
                    <i class="fa-solid fa-minus"></i>
                <% end %>
                <span class="text-xl">1</span>
                <%= link_to "#", class: "btn btn-primary-icon" do %>
                    <i class="fa-solid fa-plus"></i>
                <% end %>
            </div>
        </div>

        <%= button_to "Add to Cart", add_to_cart_product_path(@product), method: :post, class: "btn btn-secondary text-base font-extralight" %>
    </section>
</main>
