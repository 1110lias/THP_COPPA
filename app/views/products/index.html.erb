<p style="color: green"><%= notice %></p>

<h1 class="text-3xl font-bold mb-4">Products</h1>

<div id="products" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @products.each do |product| %>
    <div class="bg-gray-100 shadow-md rounded-lg overflow-hidden">
      <div class="px-8 py-6">
        <%= render product %>
      </div>
      <div class="flex justify-between items-center px-6">
        <%= link_to "Show", product, class: "btn btn-primary" %>
        <div class="flex space-x-2">
          <%= link_to "Edit", edit_product_path(product), class: "btn btn-secondary" %>
          <%= button_to "Destroy", product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New product", new_product_path, class: "btn btn-primary mt-4" %>
<br><br>

