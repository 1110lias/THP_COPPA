<div id="<%= dom_id product %>" class="bg-white shadow-md rounded-lg overflow-hidden flex flex-col">
  <% if product.photo.attached? %>
    <%= image_tag product.photo, class: "w-full h-48 object-cover" %>
  <% else %>
    <img src="placeholder_image_url" alt="Placeholder" class="w-full h-48 object-cover">
  <% end %>
  <div class="px-6 py-4">
    <h2 class="text-xl font-bold mb-2"><%= product.title %></h2>
    <p class="text-gray-600 mb-2"><%= product.subtitle %></p>
    <p class="text-gray-700 mb-4"><%= product.description %></p>
    <p class="text-gray-900 font-semibold mb-2"><%= number_to_currency(product.price) %></p>
    <p class="text-gray-700 mb-4"><%= product.category.try(:capitalize) %></p>
  </div>
  <div class="flex justify-between items-center px-6 py-4 bg-gray-200">
    <%= link_to "Show", product, class: "btn btn-primary" %>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_product_path(product), class: "btn btn-secondary" %>
      <%= button_to "Destroy", product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
